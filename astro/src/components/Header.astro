---
interface Props {
    backgroundImage?: string;
}
const { backgroundImage } = Astro.props;
---
<header>
    <slot/>
</header>

<style define:vars={{backgroundImage}}>
    header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: white;
        height: calc(400px - 92px);

        h1 {
            margin: 1rem 0 1.5rem 0;
            font-size: 4rem;
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }
        p {
            font-size: 1.2rem;
            line-height: 1.6;
        }

        &:before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 400px;
            background-size: cover;
            background-image: var(--backgroundImage, linear-gradient(to right, var(--color-scarlet), var(--color-ink)));
            z-index: -1;
            box-shadow: rgba(13, 13, 13, 0.15) 0 0 10px;
        }
    }
</style>