<style>
    .nav-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
        padding: 1rem;
        height: 60px;
        border-radius: 2rem;
        background-color: rgba(255, 255, 255, 0.89);
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.22);
        position: sticky;
        width: 90vw;
        top: 1rem;
        z-index: 1;
        backdrop-filter: blur(10px);
        overflow: hidden;
    }

    .nav-wrapper a {
        height: 2.5rem;
        width: 4rem;
        object-fit: contain;
    }

    .logo-wrapper {
        height: 100%;
        width: 100px;
        padding: 3px 8px;

        img {
            height: 100%;
            width: 100%;
            object-fit: contain;
        }
    }

    nav.desktop ul {
        display: none;
        gap: 1rem;

        @media (min-width: 768px) {
            display: flex;
        }
    }

    nav.desktop ul li {
        list-style: none;
    }

    nav.desktop ul li a {
        padding: 1rem;
        font-size: 1.2rem;
        font-weight: 500;
        position: relative;


        &:before {
            display: block;
            content: '';
            position: absolute;
            width: 100%;
            height: 3px;
            left: 0;
            bottom: -3px;
            background-color: var(--local-primary-color, var(--color-ink));
            transform: scaleX(0);
            transition: all 150ms ease-in-out;
        }

        &:hover:before {
            transform: scaleX(1);
        }
    }

    details {
        position: relative;

        summary {
            list-style: none;

            &::-webkit-details-marker {
                display: none;
            }
        }
    }

    .dropdown {
        position: absolute;
        top: 0;
        right: 0;
        transform: translateY(50%);
        width: 100%;
        height: 30px;
    }




</style>
