---
import '../styles/global.css';
import {getCollection, render} from "astro:content";
import {Image} from "astro:assets";
import Navbar from '../components/Navbar.astro';
import Authors from "../components/Authors.astro";
const authors = await getCollection('authors');
export async function getStaticPaths() {
    const postsEntries = await getCollection('posts');
    return postsEntries.map((entry) => ({
        params: {slug: entry.slug}, props: {entry},
    }));
}

const {entry} = Astro.props;
const {Content} = await render(entry);
---
<head>
    <meta charset="utf-8"/>
</head>
<Navbar/>
<header class="hero">
    <div class="img-holder">
        <Image src={entry.data.thumbnail} alt={entry.data.title}/>
    </div>
    <div class="content">
        <h1>{entry.data.title}</h1>
        <Authors authors={entry.data.author} allAuthors={authors}/>
    </div>
</header>
<main>
    <Content/>
</main>
<style>
    main {
        margin: -92px auto 0 auto;
        padding-top: 60px;
        max-width: 728px;

        p {
            margin-top: 1rem;
            line-height: 1.4;
        }

        ul {
            list-style: disc;
            padding-left: 1rem;
        }

        ol {
            list-style: decimal;
            padding-left: 1rem;
        }

        li {
            margin-top: 0.5rem;
            line-height: 1.4;
        }

        h2 {
            margin-top: 2rem;
            font-size: large;
        }

        h3 {
            margin-top: 1rem;
            font-size: medium;
        }

        pre {
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 5px;
        }
    }

    header {
        position: relative;
        color: white;
        margin: -92px 0 92px 0;
        padding-top: 120px;

        .img-holder {
            height: 400px;
            width: 100%;
            inset: 0;
            position: absolute;
            z-index: -1;
            background-image: linear-gradient(to right, rgba(235, 36, 135, 0.46), transparent, rgba(94, 243, 213, 0.3));

            img {
                height: 100%;
                width: 100%;
                object-fit: cover;
                mix-blend-mode: color-dodge;
                filter: grayscale(1) brightness(.2);
            }
        }

        .content {
            max-width: 728px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        h1 {
            font-size: 4rem;
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin-bottom: 1rem;

        }

    }

    section {
        max-width: 728px;
        margin: 0 auto;
        line-height: 1.6;


        img {
            max-width: 100%;
            height: auto;
        }

    }

</style>