---
import Authors from '../components/Authors.astro';
import {format} from 'date-fns';
import {getCollection} from "astro:content";
const collection = await getCollection('posts', ({data}) => {
    return data.layout.includes("post");
});
const posts = collection.toReversed();
const authors = await getCollection('authors');
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Astro</title>
</head>
<body>
<main>
    <header>
        <h1>Blog</h1>
        <p>Read about our streaming champions</p>
    </header>
    <section id="hero">
        <div class="main-post">
            <a class="img-holder"> <img src={posts[0].data.thumbnail?.src} alt={`Thumbnail for ${posts[0].data.title}`}></a>
            <div class="main-post-info">
                <div class="upper-part">
                    <span class="date">{format(posts[0].slug.slice(0, 10), 'MMMM dd, yyyy')}</span>
                    <hr/>
                    <h2><a href={`/${posts[0].slug}`}>{posts[0].data.title}</a></h2>
                    <p>{posts[0].data.description}</p>
                </div>
                <Authors authors={posts[0].data.author} allAuthors={authors}/>
            </div>
        </div>
    </section>
    <section class="recent-posts">
        <h2>Recent Posts</h2>
        <ul class="posts-list">
            {posts.slice(1).map((post) => (
                    <li class="post">
                        <article>
                            <div class="upper-part">
                                <a href={`/${post.slug}`}>
                                    <img src={post.data.thumbnail?.src} alt={`Thumbnail for ${post.data.title}`}/>
                                </a>
                                <div class="post-info">
                                    <a href={`/${post.slug}`}>
                                        <span class="date">{format(post.slug.slice(0, 10), 'MMMM dd, yyyy')}</span>
                                        <hr/>
                                        <h3>{post.data.title}</h3>
                                        <p>{post.data.description?.substring(0, 100)}...</p>
                                    </a>
                                </div>
                            </div>
                            <div class="bottom-part">
                                <div class="authors-holder">
                                    <Authors authors={post.data.author} allAuthors={authors}/>
                                </div>
                                <ul class="tag-holder">
                                    {post.data.tags.map((tag) => (
                                            <li class="tag">{tag}</li>
                                    ))}
                                </ul>
                            </div>
                        </article>
                    </li>
            ))}
        </ul>
    </section>
</main>
</body>
</html>

<style>
    main {
        max-width: 1140px;
        margin: 0 auto;
        padding: 0 15px
    }

    .main-post {
        display: flex;
        box-shadow: 1px 1px 20px rgba(0, 0, 0, 0.15);
        background: white;

        --hero-text-width: 390px;
        --hero-img-height: 360px;

        .img-holder {
            width: calc(100% - var(--hero-text-width));
            height: var(--hero-img-height);

            img {
                height: 100%;
                object-fit: cover;
            }
        }

        .main-post-info {
            width: var(--hero-text-width);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            .upper-part {
                h2 {
                    font-size: 1.7rem;
                }

                .date {
                    font-size: 0.8rem;
                    color: #666;
                }

                hr {
                    margin: 0.5rem 0;
                }
            }
        }

    }

    .posts-list {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        margin: -1rem;
    }

    .post {
        width: 33.33%;
        padding: 1rem;

        article {
            display: flex;
            flex-flow: nowrap column;
            justify-content: space-between;
            box-shadow: 1px 1px 20px rgba(0, 0, 0, 0.15);
            height: 100%;
            border-radius: 10px;
        }

        img {
            width: 100%;
            aspect-ratio: 16 / 9;
            object-fit: cover;
        }
    }

    .post-info {
        display: flex;
        flex-direction: column;
        padding: .5rem 1rem;
        background: white;

        h3 {
            margin: 0;
        }

        .date {
            font-size: 0.8rem;
            color: #666;
        }

        hr {
            margin: 0.5rem 0;
        }

    }

    .bottom-part {
        display: flex;
        flex-flow: nowrap column;
        justify-content: space-between;
        gap: 1.5rem;
        padding: 1rem;
    }

    .authors-holder {
        font-size: 0.8rem;
    }

    header {
        color: white;
        padding: 5rem 0;

        h1 {
            margin: 1rem 0;
            font-size: 4rem;
        }

        p {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 300;
        }

        &:before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 350px;
            background-size: cover;
            background-image: linear-gradient(to right, #3402F0 ,hsl(170deg 85% 63%));
            z-index: -1;
            box-shadow: #0d0d0d 0 0 10px;
        }
    }

    .tag-holder {
        font-size: 0.7rem;
        display: flex;
        flex-flow: row;
        gap: 1rem;
        overflow-x: scroll;
    }

    .tag {
        display: inline-block;
        white-space: nowrap;
        padding: 0.5rem 1rem;
        background: #50F1D7;
        border-radius: 15px;
        text-transform: capitalize;
    }

</style>


<style is:global>
    * {
        box-sizing: border-box;
    }

    body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    ul {
        padding: 0;
        margin: 0;
        list-style: none;
    }

</style>