---
import '../styles/global.css'
import {getCollection} from "astro:content";
import {format} from 'date-fns';
import Authors from '../components/Authors.astro';
import Header from '../components/Header.astro';
import ImageOrImg from "../components/ImageOrImg.astro";
import Navbar from "../components/Navbar.astro";
import Post from "../components/Post.astro";
import Meta from "../components/Meta.astro";

const posts = (await getCollection('posts')).toReversed();
const authors = await getCollection('authors');
---

<html lang="en">
<Meta/>
<body>
<Navbar/>
<main>
    <Header backgroundImage="linear-gradient(to right, var(--color-ink), var(--color-iris))">
        <h1>Blog</h1>
        <p>Read about our streaming champions</p>
    </Header>
    <section id="hero">
        <div class="main-post">
            <a class="img-holder" href={`/${posts[0].slug}`}>
                <ImageOrImg image={posts[0].data.thumbnail} alt={`${posts[0].data.title}`} loading="eager"/>
            </a>
            <div class="main-post-info">
                <div class="upper-part">
                    <span class="date">{format(posts[0].slug.slice(0, 10), 'MMMM dd, yyyy')}</span>
                    <hr/>
                    <h2><a href={`/${posts[0].slug}`}>{posts[0].data.title}</a></h2>
                    <p>{posts[0].data.description}</p>
                </div>
                <Authors authors={posts[0].data.author} allAuthors={authors}/>
            </div>
        </div>
        <Post post={posts[0]} authors={authors} class="displayOnMobileOnly"/>
    </section>
    <section class="recent-posts">
        <h2>Recent Posts</h2>
        <ul class="posts-list">
            {posts.slice(1, 7).map((post) => (
                    <Post post={post} authors={authors}/>
            ))}
        </ul>
    </section>
</main>
</body>
</html>

<style>
    :root {
        --local-primary-color: var(--color-ink);
    }

    main {
        max-width: 1140px;
        margin: 0 auto;
        padding: 0 15px;
    }

    #hero {
        margin-top: -2rem;
    }

    .main-post {
        display: none;
        box-shadow: 1px 1px 20px rgba(0, 0, 0, 0.15);
        border-radius: 10px;
        overflow: hidden;
        background: white;

        --hero-text-width: 390px;
        --hero-img-height: 360px;

        .img-holder {
            width: calc(100% - var(--hero-text-width));
            height: var(--hero-img-height);

            img {
                height: 100%;
                object-fit: cover;
            }
        }

        .main-post-info {
            width: var(--hero-text-width);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            .upper-part {
                h2 {
                    font-size: 1.7rem;
                    line-height: 1.2;
                    margin-bottom: 2rem;
                }

                p {
                    line-height: 1.6;
                }

                .date {
                    font-size: 0.8rem;
                    color: #666;
                }

                hr {
                    margin: 0.5rem 0;
                }
            }
        }

        @media (min-width: 768px) {
            display: flex;
            gap: 1rem;
        }
    }

    .posts-list {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        margin: -1rem;
    }

    .recent-posts {
        margin-top: 3rem;

        h2 {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }
</style>